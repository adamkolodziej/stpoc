<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd" default-autowire="byName">

	<bean id="solrPerspectiveTextEditors" class="de.hybris.platform.cockpit.model.meta.DefaultPropertyEditorDescriptor">
				<property name="editorType" value="TEXT"/>
				<property name="defaultEditor" value="de.hybris.platform.cockpit.model.editor.impl.DefaultTextUIEditor" />
				<property name="editors">
					<map>
						<entry key="beanNameEditor" value="com.hybris.commercesearch.searchandizing.cockpit.model.editor.BeanNameEditor"/>
						<entry key="solrSortFieldEditor" value="com.hybris.commercesearch.searchandizing.cockpit.model.editor.SolrSortFieldEditor" />
					</map>
				</property>
				<property name="label" value="textEditor"/>
			</bean>
			
	<bean id="solrPerspectiveReferenceEditors" class="de.hybris.platform.cockpit.model.meta.DefaultPropertyEditorDescriptor">
				<property name="editorType" value="REFERENCE"/>
				<property name="defaultEditor" value="de.hybris.platform.cockpit.model.referenceeditor.simple.impl.DefaultSimpleReferenceUIEditor" />
				<property name="editors">
					<map>
						<entry key="collectionContextAreaEditor" value="com.hybris.commercesearch.searchandizing.cockpit.model.referenceselector.CollectionContextAreaUIEditor"/>
						<entry key="groupingPropertyEditor" value="com.hybris.commercesearch.searchandizing.cockpit.model.editor.GroupingPropertyEditor"  />		
					</map>
				</property>
				<property name="label" value="referenceEditor"/>
			</bean>
				
</beans>