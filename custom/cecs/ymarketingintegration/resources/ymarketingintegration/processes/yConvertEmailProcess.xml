<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="initYConvertAction" name="yConvertEmailProcess"
		processClass="de.hybris.platform.commerceservices.model.process.StoreFrontCustomerProcessModel" onError="error">

	<!-- CECS-548 migrate seewhy e-mails into hybris e-mail process -->
	<action id="initYConvertAction" bean="initYConvertAction">
		<transition name="CONTINUE" to="generateYConvertEmail" />
		<transition name="END" to="success"/>
		<transition name="NOK" to="failed"/>
	</action>

	<action id="generateYConvertEmail" bean="generateYConvertEmail">
		<transition name="OK" to="sendEmail"/>
		<transition name="NOK" to="failed"/>
	</action>

	<action id="sendEmail" bean="sendEmail">
		<transition name="OK" to="removeSentEmail"/>
		<transition name="NOK" to="failed"/>
	</action>

	<action id="removeSentEmail" bean="removeSentEmail">
		<transition name="OK" to="initYConvertAction"/><!-- endless loop risk -->
		<transition name="NOK" to="error"/>
	</action>

	<end id="error" state="ERROR">Something went wrong.</end>
	<end id="failed" state="FAILED">Could not send customer registration email.</end>
	<end id="success" state="SUCCEEDED">Sent customer registration email.</end>

</process>