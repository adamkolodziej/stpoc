<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="validate" name="fbSynchronizationProcess"
		processClass="com.hybris.social.facebook.opengraphmine.model.process.FacebookSynchronizationProcessModel" onError="error">

	<action id="validate" bean="validateConnection">
		<transition name="OK" to="syncFacebookProfile"/>
		<transition name="NOK" to="authenticationfailed"/>
	</action>

	<action id="syncFacebookProfile" bean="syncFacebookProfile">
		<transition name="OK" to="syncFacebookUrlLikes"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="syncFacebookUrlLikes" bean="syncFacebookUrlLikes">
		<transition name="OK" to="syncFacebookLikesAndGroups"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="syncFacebookLikesAndGroups" bean="syncFacebookLikesAndGroups">
		<transition name="OK" to="syncPages"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="syncPages" bean="syncFacebookUserPages">
		<transition name="OK" to="syncFriends"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="syncFriends" bean="syncFacebookUserFriends">
		<transition name="OK" to="syncComments"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="syncComments" bean="syncFacebookComments">
 		<transition name="OK" to="evaluateBtgSegments"/> 
		<transition name="NOK" to="error"/>
	</action>	
	
 	<action id="evaluateBtgSegments" bean="evaluateFacebookBtgSegments"> 
 		<transition name="OK" to="generatePageMedia"/> 
 		<transition name="NOK" to="error"/>
 	</action> 
	
	<action id="generatePageMedia" bean="generateFacebookPageMedia">
		<transition name="OK" to="success"/>
		<transition name="NOK" to="error"/>
	</action>

	<end id="error" state="ERROR">Something went wrong.</end>
	<end id="authenticationfailed" state="FAILED">Failed to authenticate with the supplied auth token</end>
	<end id="success" state="SUCCEEDED">Profile updated</end>

</process>