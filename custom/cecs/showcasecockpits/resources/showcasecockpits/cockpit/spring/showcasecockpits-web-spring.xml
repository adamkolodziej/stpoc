<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
						http://www.springframework.org/schema/aop 
						http://www.springframework.org/schema/aop/spring-aop-3.1.xsd"
	default-autowire="byName">


	<!-- CECS-529 It is not possible to go from Season to episodes in Product cockpit START -->
	
	<bean id="ServicesProductsContentBrowserActionColumn"
		class="de.hybris.platform.cockpit.components.listview.impl.DefaultActionColumnConfiguration"
		parent="ProductContentBrowserActionColumn"
		scope="prototype">
		<property name="actions">
			<list merge="true">
				<ref bean="ShowEpisodesAction" />
				<ref bean="ShowSeasonAction" />
				<ref bean="ShowShowsAction" />
				<ref bean="StartConfigurationMappingAction" />
			</list>
		</property>
	</bean>
	
	<bean id="ShowEpisodesAction" class="com.hybris.showcase.showcasecockpits.components.listview.actions.impl.ShowEpisodesAction" scope="prototype">
		<property name="cockpitTypeService" ref="cockpitTypeService" />
	</bean>
	<bean id="ShowSeasonAction" class="com.hybris.showcase.showcasecockpits.components.listview.actions.impl.ShowSeasonAction" scope="prototype">
		<property name="cockpitTypeService" ref="cockpitTypeService" />
	</bean>
	<bean id="ShowShowsAction" class="com.hybris.showcase.showcasecockpits.components.listview.actions.impl.ShowShowsAction" scope="prototype">
		<property name="cockpitTypeService" ref="cockpitTypeService" />
	</bean>
	
	<!-- CECS-529 It is not possible to go from Season to episodes in Product cockpit END -->
	
	<!-- CECS-627 productcockpit action to start configuration mapping START -->
	
	<bean id="StartConfigurationMappingAction" class="com.hybris.showcase.showcasecockpits.components.listview.actions.impl.StartConfigurationMappingAction" scope="prototype">
        <property name="cronJobService" ref="cronJobService"/>
		<property name="modelService" ref="modelService"/>
		<property name="baseSiteService" ref="baseSiteService"/>
	</bean>
	
	<!-- CECS-627 productcockpit action to start configuration mapping END -->
	
</beans>