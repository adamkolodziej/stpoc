<project name="wildwordscockpit_buildcallbacks" >
	
	
	
	<macrodef name="wildwordscockpit_after_build">
			<sequential>

				<if>
					<isset property="ext.cmscockpit.path"/>
					<then>
						<echo level="info" message="wildwordscockpit - Copying custom files to cmscockpit..."/>
						 <copy todir="${ext.cmscockpit.path}/web/webroot/cmscockpit">
							<fileset dir="${ext.wildwordscockpit.path}/resources/wildwordscockpit/cmscockpit/zul">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<copy todir="${ext.cmscockpit.path}/web/webroot/cmscockpit/css">
							<fileset dir="${ext.wildwordscockpit.path}/resources/wildwordscockpit/cmscockpit/css">
								<include name="**/**.*" />
							</fileset>
						</copy>
						
					</then>
				</if>

				<if>
					<isset property="ext.btgcockpit.path"/>
					<then>
						<echo level="info" message="wildwordscockpit - Copying custom files to btgcockpit..."/>
						<copy todir="${ext.btgcockpit.path}/web/webroot/cmscockpit">
							<fileset dir="${ext.wildwordscockpit.path}/resources/wildwordscockpit/cmscockpit/zul">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<copy todir="${ext.btgcockpit.path}/web/webroot/cmscockpit/css">
							<fileset dir="${ext.wildwordscockpit.path}/resources/wildwordscockpit/cmscockpit/css">
								<include name="**/**.*" />
							</fileset>
						</copy>
						
					</then>
				</if>

			</sequential>
		</macrodef>
		
</project>
