<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	
	<!--  Business Processes & Business Process Starting Event Listeners-->	
	<bean id="abstractfacebookProfileSyncEventListener" abstract="true" class="com.hybris.social.facebook.opengraphmine.process.event.FacebookProfileSyncEventListener">
		<property name="modelService" ref="modelService" />
		<property name="tenantService" ref="tenantService"/>
		<property name="clusterService" ref="clusterService"/>
		<property name="businessProcessService" ref="businessProcessService" />
		<property name="facebookSynchronizationProcessDao" ref="facebookSynchronizationProcessDao" />
		<property name="facebookConnectionConverter" ref="facebookConnectionConverter" />
	</bean>
	
	<!--  Background Profile Synchronization Processes -->
	<bean id="fbSynchronizationProcessDefinitionResource" class="de.hybris.platform.processengine.definition.ProcessDefinitionResource">
		<property name="resource" value="classpath:/opengraphmine/processes/fbSynchronizationProcess.xml"/>
	</bean>
	<bean id="facebookProfileSyncEventListener"  parent="abstractfacebookProfileSyncEventListener">
		<property name="processName" value ="fbSynchronizationProcess" />
		<property name="assignableEventClasses" value="com.hybris.social.facebook.opengraphmine.process.event.FacebookProfileSyncEvent" />
	</bean>
	<bean id="fbLikeSyncProcessDefinitionResource" class="de.hybris.platform.processengine.definition.ProcessDefinitionResource">
		<property name="resource" value="classpath:/opengraphmine/processes/fbLikeSyncProcess.xml"/>
	</bean>
	<bean id="fbLikeSyncProcessEventListener"  parent="abstractfacebookProfileSyncEventListener">
		<property name="processName" value ="fbLikeSyncProcess" />
		<property name="assignableEventClasses" value="com.hybris.social.facebook.opengraphmine.process.event.FacebookLikeEvent" />
	</bean>
	
	
	<!--  Business Process ACTIONS -->
	<bean id="abstractFacebookSyncAction" class="de.hybris.platform.processengine.action.AbstractAction" 
		abstract="true">
		<property name="modelService" ref="modelService"/>
		<property name="processParameterHelper" ref="processParameterHelper"/>
	</bean>
	
	<bean id="validateConnection" class="com.hybris.social.facebook.opengraphmine.process.actions.ValidateConnectionAction" parent="abstractFacebookSyncAction">
	</bean>
	
	<bean id="syncFacebookProfile" class="com.hybris.social.facebook.opengraphmine.process.actions.FacebookSyncAction" parent="abstractFacebookSyncAction">
		<property name="converter" ref="facebookUserConverter" />
	</bean>
	
	<bean id="syncFacebookLikesAndGroups" class="com.hybris.social.facebook.opengraphmine.process.actions.FacebookSyncAction" parent="abstractFacebookSyncAction">
		<property name="converter" ref="facebookTemplateLikesGroupsConverter" />
	</bean>
	
	<bean id="syncFacebookUrlLikes" class="com.hybris.social.facebook.opengraphmine.process.actions.FacebookSyncAction" parent="abstractFacebookSyncAction">
		<property name="converter" ref="facebookTemplateUserUrlLikesConverter" />
	</bean>
	
	<bean id="syncFacebookUserPages" class="com.hybris.social.facebook.opengraphmine.process.actions.FacebookSyncAction" parent="abstractFacebookSyncAction">
		<property name="converter" ref="facebookTemplateUserPagesConverter" />
	</bean>
	
	<bean id="syncFacebookUserFriends" class="com.hybris.social.facebook.opengraphmine.process.actions.FacebookSyncAction" parent="abstractFacebookSyncAction">
		<property name="converter" ref="facebookTemplateUserFriendsConverter" />
	</bean>
	
	<bean id="syncFacebookComments" class="com.hybris.social.facebook.opengraphmine.process.actions.FacebookSyncAction" parent="abstractFacebookSyncAction">
		<property name="converter" ref="facebookTemplateCommentsConverter" />
	</bean>	
	
	<bean id="evaluateFacebookBtgSegments" class="com.hybris.social.facebook.opengraphmine.process.actions.EvaluateBTGSegmentsAction" parent="abstractFacebookSyncAction">
		<property name="catalogVersionService" ref="catalogVersionService" />
		<property name="cmsSiteService" ref="cmsSiteService" />
		<property name="segmentService" ref="segmentService" />
		<property name="btgResultService" ref="btgResultService" /> 
	  	<property name="btgEvaluationService" ref="btgEvaluationService" /> 
	</bean>
	
	<bean id="generateFacebookPageMedia"  class="com.hybris.social.facebook.opengraphmine.process.actions.FacebookSyncAction" parent="abstractFacebookSyncAction">
		<property name="converter" ref="facebookUserPagesMediaConverter" />
	</bean>
	           
</beans>