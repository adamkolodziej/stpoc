    <relations>
        <relation code="BundlePackagetoBundlePackageDescriptionSlots" localized="false" autocreate="true"
                  generate="true">
            <deployment table="container2descslots" typecode="31503"/>
            <sourceElement type="BundlePackageDescriptionSlotsContainerComponent" qualifier="bundlePackageContainer"
                           cardinality="many"/>
            <targetElement type="BundlePackageDescriptionSlot" qualifier="descriptionSlots" cardinality="many"
                           collectiontype="list"/>
        </relation>
        <relation code="BundlePackage2BundlePackageDescriptionSlotsContainerComponentRelation" localized="false">
            <deployment table="package2container" typecode="31504"/>
            <sourceElement type="BundlePackage" qualifier="bundlePackage" cardinality="many"/>
            <targetElement type="BundlePackageDescriptionSlotsContainerComponent" qualifier="descriptionSlotsContainer"
                           cardinality="many"/>
        </relation>
        <relation code="BundlePackageToInfoTabComponent" localized="false" autocreate="true" generate="true">
            <deployment table="package2relcont" typecode="31505"/>
            <sourceElement type="BundlePackage" qualifier="bundlePackages" cardinality="many"/>
            <targetElement type="BundlePackageRelatedComponentsContainerComponent"
                           qualifier="relatedComponentsContainers" cardinality="many" collectiontype="list"/>
        </relation>
        <relation code="BundlePackageContainerToInfoTabComponent" localized="false" autocreate="true" generate="true">
            <deployment table="cont2infotabcomp" typecode="31506"/>
            <sourceElement type="BundlePackageRelatedComponentsContainerComponent" qualifier="bundlePackageContainers"
                           cardinality="many"/>
            <targetElement type="SimpleCMSComponent" qualifier="relatedComponents" cardinality="many"
                           collectiontype="list"/>
        </relation>
    </relations>

