	<!-- 
	    Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file
	
	     ${ear.path}: 			path to ear
	 -->
	<!-- CECS-529 It is not possible to go from Season to episodes in Product cockpit START -->
	<macrodef name="showcasecockpits_after_build">
		<sequential>
			<if>
				<isset property="ext.productcockpit.path"/>
				<then>
					<echo level="info" message="showcasecockpits - Copying custom image files to productcockpit..."/>
					<copy todir="${ext.productcockpit.path}/web/webroot/cockpit/images">
						<fileset dir="${ext.showcasecockpits.path}/resources/showcasecockpits/import/cockpits/productcockpit/images">
							<include name="**/**.*" />
						</fileset>
					</copy>
				</then>
			</if>
			
			<!-- CECS-690 START -->
			<if>
				<isset property="ext.cscockpit.path"/>
				<then>
					<echo level="info" message="showcasecockpits - Copying custom templates to cscockpit..."/>
					<copy todir="${ext.cscockpit.path}/web/webroot/cscockpit/templates/">
						<fileset dir="${ext.showcasecockpits.path}/web/webroot/cscockpit/templates/">
							<include name="**/**.*" />
						</fileset>
					</copy>
				</then>
			</if>
			
			<if>
				<isset property="ext.cscockpit.path"/>
				<then>
					<echo level="info" message="showcasecockpits - Copying custom css to cscockpit (content will be appended to existing cscockpit.css file)..."/>
					<concat destfile="${ext.cscockpit.path}/web/webroot/cscockpit/css/cscockpit.css" append="true">
				    	<filelist dir="${ext.showcasecockpits.path}/web/webroot/cscockpit/css/" files="cscockpit.css"/>
				 	</concat>
				</then>
			</if>
			<!-- CECS-690 END -->
	
		</sequential>
	</macrodef>
	<!-- CECS-529 It is not possible to go from Season to episodes in Product cockpit END -->
	
	<macrodef name="showcasecockpits_before_ear">
		<sequential>

			<!-- you can do anything before the EAR file is being packed -->

		</sequential>
	</macrodef>

</project>
