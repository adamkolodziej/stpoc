			<value code="dark" />
		</enumtype>
		
		<enumtype code="FacebookLikeVerbToDisplay" generate="true" autocreate="true" dynamic="true">
			<value code="like" />
			<value code="recommend" />
		</enumtype>
		
		<enumtype code="FacebookLayoutStyle" generate="true" autocreate="true" dynamic="true">
			<value code="standard" />
			<value code="button_count" />
			<value code="box_count" />
		</enumtype>
		
		<enumtype code="FacebookLinkTarget" generate="true" autocreate="true" dynamic="true">
