<!-- WARNING: This is the CUSTOM Spring WEB configuration file used for admincockpit 
	web application. -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
						http://www.springframework.org/schema/util
						http://www.springframework.org/schema/util/spring-util-3.1.xsd
						http://www.springframework.org/schema/aop 
						http://www.springframework.org/schema/aop/spring-aop-3.1.xsd"
	default-autowire="byName">

	<bean id="SocialPerspectivePluginList"
		class="de.hybris.platform.cockpit.session.PerspectivePluginList"
		scope="session">
		<property name="additionalPerspectives">
			<list>
				<ref bean="SocialAdminPerspective" />
			</list>
		</property>
	</bean>

	<bean id="SocialAdminPerspective" parent="DefaultAdminPerspective">
		<property name="uid" value="cockpit.perspective.socialadmin" />
		<property name="label" value="cockpit.perspective.socialadmin" />
		<property name="browserArea">
			<ref bean="SocialBrowserArea" />
		</property>
		<property name="navigationArea">
			<bean parent="BaseNavigationArea">
				<property name="sections" ref="adminSocialSelectorSections" />
			</bean>
		</property>
	</bean>

	<alias name="defaultSocialSelectorSections" alias="adminSocialSelectorSections" />
	<util:list id="defaultSocialSelectorSections">
		<ref bean="SocialGeneralAdminTypeSelectorSection" />
		<ref bean="adminSocialUndoSection" />
	</util:list>

	<bean id="adminSocialUndoSection"
		class="de.hybris.platform.cockpit.components.navigationarea.NavigationPanelSection">
		<property name="localizedLabel" value="navigationarea.history" />
		<property name="visible" value="true" />
		<property name="renderer">
			<bean
				class="de.hybris.platform.cockpit.components.navigationarea.renderer.UndoSectionRenderer" />
		</property>
	</bean>

	<alias alias="SocialBrowserArea" name="DefaultSocialBrowserArea" />
	<bean id="DefaultSocialBrowserArea"
		class="de.hybris.platform.cockpit.session.impl.DefaultSearchBrowserArea"
		scope="session">
		<property name="rootSearchTypeCode" value="CustomerReview" />
		<property name="viewURI" value="/cockpit/baseSearchBrowserArea.zul" />
		<property name="extendedSearchBrowser" value="true" />
	</bean>
	
	
	<bean id="SocialGeneralAdminTypeSelectorSection" parent="DefaultAdminTypeSelectorSection">
		<property name="localizedLabel" value="navigationarea.types.general" />
		<property name="visible" value="true" />
		<property name="renderer"
			ref="SocialGeneralAdminTypeSelectorSectionRenderer" />
	</bean>
	
	
	<alias name="defaultSocialGeneralAdminTypeSelectorSectionRenderer" alias="SocialGeneralAdminTypeSelectorSectionRenderer" />
	<bean id="defaultSocialGeneralAdminTypeSelectorSectionRenderer" parent="DefaultAdminTypeSelectorSectionRenderer">
		<property name="typeCodes" value="CustomerReview" />
		<property name="includeSubtypes" value="true" />
		<property name="displayType" value="TREE" />
		<property name="searchable" value="false" />		
	</bean>

	<bean id="ItemContentBrowserActionColumn"
		class="de.hybris.platform.cockpit.components.listview.impl.DefaultActionColumnConfiguration"
		scope="prototype">
		<constructor-arg value="Actions" />
		<property name="actions">
			<list>
				<ref bean="DeleteAction" />
			</list>
		</property>
	</bean>
</beans>