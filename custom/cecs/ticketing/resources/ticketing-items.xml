<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

	<enumtypes>
		<enumtype code="TicketArea" autocreate="true" generate="true" dynamic="true">
			<value code="CustomerConvenience" />
			<value code="ExpenseDisputes" />
		</enumtype>
	</enumtypes>

	<!-- CECS-601 once expense disputed is started that could be reflected in UI START -->
	<relations>
		<relation code="Expense2ExpenseDisputes" generate="true" localized="false" autocreate="true">
			<description>This relation links expense to many expense disputes.</description>
			<sourceElement qualifier="expense" type="Expense" cardinality="one">
				<modifiers read="true" write="true" search="true"
						   optional="false" />
			</sourceElement>
			<targetElement qualifier="expenseDisputes" type="ExpenseDispute" cardinality="many">
				<modifiers read="true" write="true" search="true"
						   optional="true" />
			</targetElement>
		</relation>
	</relations>
	<!-- CECS-601 once expense disputed is started that could be reflected in UI END -->

	<itemtypes>
		
		<!-- YTODO - this should be moved out of ticketing extension -->
		<itemtype code="CsTicket" generate="false" autocreate="false" jaloclass="com.hybris.platform.ticket.jalo.CsTicket">
			<attributes>
	           <attribute autocreate="true" qualifier="note" type="java.lang.String" generate="true">
	               <persistence type="property"/>
	               <modifiers optional="true"/>
	            </attribute>
	             <attribute autocreate="true" qualifier="area" type="TicketArea" generate="true">
	               <persistence type="property"/>
	               <modifiers optional="true"/>
	            </attribute>
	             <attribute autocreate="true" qualifier="c4cAttemptTicketId" type="java.lang.String" generate="true">
	               <persistence type="property"/>
	               <modifiers optional="true"/>
	            </attribute>	 
	            <attribute autocreate="true" qualifier="c4cAttemptTicketStatusCode" type="java.lang.String" generate="true">
	               <persistence type="property"/>
	               <modifiers optional="true"/>
	            </attribute>           
			</attributes>
		</itemtype>
		
		<!-- CECS-338 Implement a Mashup for C4C allowing to grant entitlement for specific movie START -->
		<itemtype code="ProductEntitlement" generate="false" autocreate="false">
            <attributes>
                <attribute type="java.lang.Integer" qualifier="giftValue">
                    <description>Gift Value</description>
                    <persistence type="property"/>
                </attribute>
            </attributes>
		</itemtype>

		<!-- CECS-571: Dispute expenses -->
		<itemtype code="ExpenseDispute" autocreate="true" generate="true">
			<deployment table="expensedispute" typecode="24100"/>
			<attributes>
				<attribute qualifier="code" type="java.lang.String">
					<persistence type="property"/>
					<modifiers unique="true" optional="false"/>
				</attribute>
				<attribute qualifier="description" type="java.lang.String">
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="csTicket" type="CsTicket">
					<persistence type="property"/>
				</attribute>
				<attribute qualifier="csTicketId" type="java.lang.String">
					<persistence type="property"/>
				</attribute>
			</attributes>
		</itemtype>

	</itemtypes>
</items>
