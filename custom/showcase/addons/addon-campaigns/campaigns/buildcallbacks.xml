	<!-- 
	    Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file
	
	     ${ear.path}: 			path to ear
	 -->
	<macrodef name="campaigns_before_ear">
		<sequential>

			<!-- you can do anything before the EAR file is being packed -->
			
		</sequential>
	</macrodef>
	
	<macrodef name="campaigns_after_build">
			<sequential>

				<if>
					<isset property="ext.cmscockpit.path"/>
					<then>
						<echo level="info" message="campaigns - Copying custom files to cmscockpit..."/>
						 <copy todir="${ext.cmscockpit.path}/web/webroot/promotioncockpit">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/zul">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<echo level="info" message="campaigns - Copying custom css files to cmscockpit..."/>
						<copy todir="${ext.cmscockpit.path}/web/webroot/promotioncockpit/css">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/css">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<copy todir="${ext.cmscockpit.path}/web/webroot/promotioncockpit/images">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/images">
								<include name="**/**.*" />
							</fileset>
						</copy>
					</then>
				</if>

				<if>
					<isset property="ext.btgcockpit.path"/>
					<then>
						<echo level="info" message="campaigns - Copying custom files to btgcockpit..."/>
						<copy todir="${ext.btgcockpit.path}/web/webroot/promotioncockpit">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/zul">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<copy todir="${ext.btgcockpit.path}/web/webroot/promotioncockpit/css">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/css">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<copy todir="${ext.btgcockpit.path}/web/webroot/promotioncockpit/images">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/images">
								<include name="**/**.*" />
							</fileset>
						</copy>
					</then>
				</if>
				
				<if>
					<isset property="ext.productcockpit.path"/>
					<then>
						<echo level="info" message="campaigns - Copying custom files to productcockpit..."/>
						<copy todir="${ext.productcockpit.path}/web/webroot/promotioncockpit">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/zul">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<copy todir="${ext.productcockpit.path}/web/webroot/promotioncockpit/css">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/css">
								<include name="**/**.*" />
							</fileset>
						</copy>
						<copy todir="${ext.productcockpit.path}/web/webroot/promotioncockpit/images">
							<fileset dir="${ext.campaigns.path}/resources/campaigns/promotioncockpit/images">
								<include name="**/**.*" />
							</fileset>
						</copy>
					</then>
				</if>
			</sequential>
		</macrodef>
		
</project>
