<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
		   http://www.springframework.org/schema/context/spring-context-3.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">
           
    <context:component-scan base-package="com.hybris.social.common.controllers" />       

	<alias alias="sharedPageUrlStrategy" name="defaultSharedPageUrlStrategy" />
 	<bean id="defaultSharedPageUrlStrategy" class="com.hybris.social.common.url.impl.DefaultSharedPageUrlStrategy" >
 		<property name="urlPathHelper">
 			<bean class="de.hybris.platform.yb2bacceleratorstorefront.web.mvc.B2BAcceleratorUrlPathHelper" />
 		</property>
 	</bean>	
 	
 	<bean id="iFrameListComponentRenderer" parent="addOnJspIncludeCMSComponentRenderer"
		class="com.hybris.social.common.cms.renderers.IFrameListComponentRenderer" />

	<bean id="iFrameListComponentRendererMapping" parent="addonCmsComponentRendererMapping">
		<property name="typeCode" value="IFrameListComponent" />
		<property name="renderer" ref="iFrameListComponentRenderer" />
	</bean>
 	
 </beans>