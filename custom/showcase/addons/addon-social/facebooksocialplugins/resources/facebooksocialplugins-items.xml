			<value code="_top" />
			<value code="_parent" />
		</enumtype>
		
		<enumtype code="FacebookRecommendationsBarSide" generate="true" autocreate="true" dynamic="true">
			<value code="left"/>
			<value code="right" />
		</enumtype>

		<enumtype code="FacebookFont" generate="true" autocreate="true" dynamic="true">
			<value code="ARIAL" />
			<value code="LUCIDA_GRANDE" />
			<value code="SEGOE_UI" />
			<value code="TAHOMA" />
			<value code="TREBUCHET_MS" />
			<value code="VERDANA" />
		</enumtype>

		<enumtype code="FacebookLoginButtonSize" generate="true" autocreate="true" dynamic="true">
			<value code="small" />
			<value code="medium" />
			<value code="large" />
			<value code="xlarge" />
		</enumtype>
		
		
		<enumtype code="FacebookFacepilePictureSize" generate="true" autocreate="true" dynamic="true">
