			<label key="cockpit.config.label.General" />
			
			<property qualifier="FacebookLocation.longitude" visible="true"/>
			<property qualifier="FacebookLocation.latitude" visible="true"/>
			<property qualifier="FacebookLocation.address" visible="true"/>
			<property qualifier="FacebookLocation.address.postalCode" visible="true"/>
