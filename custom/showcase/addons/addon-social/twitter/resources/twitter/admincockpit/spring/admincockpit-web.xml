<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
						http://www.springframework.org/schema/util
						http://www.springframework.org/schema/util/spring-util-3.1.xsd
						http://www.springframework.org/schema/aop 
						http://www.springframework.org/schema/aop/spring-aop-3.1.xsd"
	default-autowire="byName">
    
    <bean id="twitterSocialSelectorSection" depends-on="adminSocialSelectorSections" parent="listMergeDirective" >
		<property name="add" ref="SocialTwitterAdminTypeSelectorSection" />
		<property name="afterBeanNames">
			<list value-type="java.lang.String" >
				<value>SocialGeneralAdminTypeSelectorSection</value>
			</list>
		</property>
		<property name="beforeBeanNames">
			<list value-type="java.lang.String" >
				<value>adminSocialUndoSection</value>
			</list>
		</property>
	</bean>
    
    <bean id="SocialTwitterAdminTypeSelectorSection" parent="DefaultAdminTypeSelectorSection">
		<property name="localizedLabel" value="navigationarea.types.twitter" />
		<property name="visible" value="true" />
		<property name="renderer" ref="SocialTwitterAdminTypeSelectorSectionRenderer" />
		<property name="open" value="false" />
	</bean>

	<bean id="SocialTwitterAdminTypeSelectorSectionRenderer" parent="DefaultAdminTypeSelectorSectionRenderer">
		<property name="typeCodes" value="TwitterAccount,ShortUrlCache" />
		<property name="includeSubtypes" value="true" />
		<property name="displayType" value="TREE" />
		<property name="searchable" value="false" />
	</bean>
</beans>