<?xml version="1.0" encoding="UTF-8"?>

<wizard-config showPrefilledValues="true" selectMode="true" createMode="true">
	<displayed-properties>
		<group qualifier="General" visible="true" initially-opened="false">
			<label key="cockpit.config.label.General" />

			<property qualifier="CMSItem.name"/>
			<property qualifier="CMSItem.catalogVersion"/>
			<property qualifier="AbstractCMSComponent.visible"/>
		</group>
		
		<group qualifier="settings" visible="true" initially-opened="true">
			<label key="cockpit.config.label.Settings" />
			<property qualifier="AbstractTwitterWidgetComponent.widgetId" />	
			<property qualifier="TwitterProfileWidgetComponent.account" />						
		</group>
		
		<group qualifier="prefs" visible="true" initially-opened="true">
			<label key="cockpit.config.label.Preferences" />

			<property qualifier="AbstractTwitterWidgetComponent.numberOfTweets" />
			<property qualifier="AbstractTwitterWidgetComponent.relatedAccounts" />
			
		</group>
	
		<group qualifier="appearance" visible="true" initially-opened="true">
			<label key="cockpit.config.label.Appearance" />

			<property qualifier="AbstractTwitterWidgetComponent.theme" />
			<property qualifier="AbstractTwitterWidgetComponent.chrome" />			
			<property qualifier="AbstractTwitterWidgetComponent.linksColor" />
			<property qualifier="AbstractTwitterWidgetComponent.borderColor" />
			<property qualifier="AbstractTwitterWidgetComponent.ariaPolite" />				
		</group>
	
		<group qualifier="dimensions" visible="true" initially-opened="true">
			<label key="cockpit.config.label.Dimensions" />

			<property qualifier="AbstractTwitterWidgetComponent.width" />
			<property qualifier="AbstractTwitterWidgetComponent.height" />
		</group>
		
	</displayed-properties>
</wizard-config>