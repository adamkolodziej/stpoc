<!--
 All hybris buildcallbacks.xml macrodefinitions:
 
 Build/Documentation
 
	 before/after ant macro "clean"
		 <macrodef name="pinterest_before_clean"/>
		 <macrodef name="pinterest_after_clean"/>
	 
	 before/after ant macro "build"
		 <macrodef name="pinterest_before_build"/>
		 <macrodef name="pinterest_after_build"/>
		 
	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="pinterest_before_compile_core">
		 <macrodef name="pinterest_after_compile_core">
	 
	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="pinterest_before_compile_web" />
		 <macrodef name="pinterest_after_compile_web" />
	 
	 before/after ant macro "compile_hmc" - the hmc module of the extension
		 <macrodef name="pinterest_before_compile_hmc" />
		 <macrodef name="pinterest_after_compile_hmc" />
 
 Preparing extension
 
	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)	
		 <macrodef name="pinterest_only_once_prepare"/>
 
 Creating ear module/production
 
	 before/after ant macro "ear"
		 <macrodef name="pinterest_before_ear"/>
		 <macrodef name="pinterest_after_ear"/>

	 before/after ant macro "production" - for hybris server only
		 <macrodef name="pinterest_before_production" />
		 <macrodef name="pinterest_after_production" />
 
 JUnit Test
 
	 before/after ant macro "yunitinit" 
		 <macrodef name="pinterest_before_yunitinit" />
		 <macrodef name="pinterest_after_yunitinit" />
	 
	 before/after ant macro "yunit"
		 <macrodef name="pinterest_before_yunit" />
		 <macrodef name="pinterest_after_yunit" /> 
		 
 Distribution package
 
 	 before/after ant macro "dist" - internal target; only for use when platform is available in source code
		 <macrodef name="pinterest_after_dist"/>
		 <macrodef name="pinterest_before_dist"/>
	 
	 before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		 <macrodef name="pinterest_before_dist_copy"/>
		 <macrodef name="pinterest_after_dist_copy"/>
 
-->

<project name="pinterest_buildcallbacks" >
	
	<macrodef name="pinterest_before_build">
					<sequential>
						<pinterest_delete_web_dir />
	
						<if>
										<isset property="ext.cmscockpit.path"/>
										<then>
						<echo level="info" message="Start copying custom pinterest cmscockpit images to cmscockpit..."/>
								<copy todir="${ext.cmscockpit.path}/web/webroot/cmscockpit/images">
									<fileset dir="${ext.pinterest.path}/resources/pinterest/cmscockpit/images">
										<include name="**/**.*" />
									</fileset>
								</copy>
								
										</then>
										</if>
						<if>
																<isset property="ext.btgcockpit.path"/>
																<then>
												<echo level="info" message="Start copying custom pinterest cmscockpit images to btgcockpit..."/>
														<copy todir="${ext.btgcockpit.path}/web/webroot/cmscockpit/images">
															<fileset dir="${ext.pinterest.path}/resources/pinterest/cmscockpit/images">
																<include name="**/**.*" />
															</fileset>
														</copy>
														
																</then>
																</if>
					</sequential>
				</macrodef>
			
	<macrodef name="pinterest_after_build">
				<sequential>
					<pinterest_delete_web_dir />
				</sequential>
			</macrodef>
			
			<macrodef name="pinterest_after_clean">
					<sequential>
						<pinterest_delete_web_dir />
					</sequential>
				</macrodef>
			
			<macrodef name="pinterest_delete_web_dir">
					<sequential>
						<!-- This is required until PLA-10893 is fixed -->
						<echo level="info" message="Removing web directory for extension pinterest"/>
						<delete quiet="true" dir="${ext.pinterest.path}/web"/>
					</sequential>
				</macrodef>
</project>
