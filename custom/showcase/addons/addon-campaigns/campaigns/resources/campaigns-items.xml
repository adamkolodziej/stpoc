		<itemtype code="PublicationPeriod" 
			jaloclass="com.hybris.campaigns.jalo.PublicationPeriod"
			autocreate="true"
			generate="true">
			<deployment table="PublicationPeriod" typecode="20350"/>
			
			<custom-properties>
				<property name="catalogItemType"><value>java.lang.Boolean.TRUE</value></property>
				<property name="catalogVersionAttributeQualifier"><value>"catalogVersion"</value></property>
				<property name="uniqueKeyAttributeQualifier"><value>"code"</value></property>
			</custom-properties>
			<attributes>
				<attribute qualifier="code" autocreate="true" generate="true" type="java.lang.String">
					<persistence type="property"/>
					<modifiers optional="false"/>
				</attribute>
				<attribute qualifier="catalogVersion" autocreate="true" generate="true" type="CatalogVersion">
					<persistence type="property"/>
					<modifiers optional="false"/>
				</attribute>
				<attribute qualifier="name" autocreate="true" generate="true" type="localized:java.lang.String">
					<persistence type="property"/>
					<modifiers optional="true"/>
				</attribute>
				<attribute qualifier="startDate" autocreate="true" generate="true" type="java.util.Date">
					<persistence type="property"/>
					<modifiers optional="true"/>
				</attribute>
				<attribute qualifier="endDate" autocreate="true" generate="true" type="java.util.Date">
					<persistence type="property"/>
					<modifiers optional="true"/>
				</attribute>
				<attribute qualifier="daysOfWeek" autocreate="true" generate="true" type="DayOfWeekCollection">
					<description>Days of the week when publication is active, empty means every day of the week.</description>
					<persistence type="property"/>
					<modifiers optional="true"/>
				</attribute>
				<attribute qualifier="fromHour" autocreate="true" generate="true" type="java.lang.Integer">
					<description>Null means no time of day restriction.</description>
					<persistence type="property"/>
					<modifiers optional="true"/>
				</attribute>
				<attribute qualifier="toHour" autocreate="true" generate="true" type="java.lang.Integer">
					<description>Null means no time of day restriction.</description>
					<persistence type="property"/>
					<modifiers optional="true"/>
				</attribute>
				<attribute qualifier="baseSite" autocreate="true" generate="true" type="BaseSite">
					<description>Null means all sites.</description>
					<persistence type="property"/>
					<modifiers optional="true"/>
				</attribute>
				<attribute type="java.lang.Boolean" qualifier="enabled">
					<persistence type="property" />
					<modifiers optional="false"/>
					<defaultvalue>java.lang.Boolean.TRUE</defaultvalue>
				</attribute>
				<attribute qualifier="timezone" type="Timezone">
					<persistence type="property" />
					<modifiers optional="true"/>
					<defaultvalue>em().getEnumerationValue("Timezone","System")</defaultvalue>
				</attribute>
			</attributes>
			<indexes>
				<index name="codeVersionIDX" unique="false">
					<key attribute="code"/>
					<key attribute="catalogVersion"/>
				</index>
			</indexes>
		</itemtype>
		
