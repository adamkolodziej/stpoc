	file (cmscockpit/resources/cmscockpit-application-context.xml) -->

<!-- WARNING: This file is imported in cmscockpit-web-spring.xml therefore you don't need
	to list it in your deployment descriptor -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-autowire="byName">
	
	<bean id="wildwordsCallbackScript" class="de.hybris.platform.cmscockpit.session.script.config.impl.SimpleScriptFragment">
		<property name="group" value="LIVEEDIT" />
		<property name="script">
		<value>
		 <![CDATA[
			 function notifyIframeAboutWildWordsEdit(lang){
					var iframeCollection = document.getElementsByTagName('iframe');
					var id="";
			      for(index in iframeCollection){
			      	if(iframeCollection[index].className!=null&&iframeCollection[index].className=='liveEditBrowser'&&iframeCollection[index].offsetHeight!=0){
			      		id=iframeCollection[index].id;
			      		break;
			          }
			      }
			      comm.sendUser(id,'editWildWords',lang)
			   }
		   ]]>
		  </value> 
		  </property>   
	</bean>	
	<bean id="wildwordsCallbackEventHandler" class="com.hybris.searchandizing.wildwords.cockpit.callbackevent.WildWordsCallbackEventHandler" />
</beans>