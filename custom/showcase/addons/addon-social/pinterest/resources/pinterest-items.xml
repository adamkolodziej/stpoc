<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<enumtypes>
	
		
		<enumtype code="PinCountLayoutStyle" autocreate="true" generate="true">
			<value code="above" />
			<value code="beside" />
			<value code="none" />
		</enumtype>
	</enumtypes>


	<itemtypes>
		<typegroup name="pinterest">
			<itemtype code="AbstractPinterestComponent" generate="true"
				jaloclass="com.hybris.social.pinterest.jalo.AbstractPinterestComponent"
				extends="SimpleCMSComponent" autocreate="true" abstract="true" />
				
			
			<itemtype code="PinterestFollowButtonComponent" extends="AbstractPinterestComponent"  generate="true" autocreate="true"
				jaloclass="com.hybris.social.pinterest.jalo.PinterestFollowButtonComponent">
				<attributes>
					<attribute qualifier="username" type="java.lang.String">
						<persistence type="property" />
						<modifiers optional="false" />
					</attribute>
					<attribute qualifier="buttonTitle" type="localized:java.lang.String">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype code="PinItButtonComponent" extends="AbstractPinterestComponent"  generate="true" autocreate="true" 
				jaloclass="com.hybris.social.pinterest.jalo.PinItButtonComponent">
				<attributes>
					<attribute qualifier="urlToPin" type="java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="imageToPin" type="localized:Media">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="description" type="localized:java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="pinCountLayout" type="PinCountLayoutStyle">
						<persistence type="property" />
						<modifiers optional="false" />
						<defaultvalue>em().getEnumerationValue("PinCountLayoutStyle", "beside")</defaultvalue>
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>
	</itemtypes>
</items>
