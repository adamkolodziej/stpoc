<wizard-config showPrefilledValues="true" selectMode="true" createMode="true"  displaySubtypes="true">
	<displayed-properties>
	<group qualifier="General" visible="true" initially-opened="true">
		<label lang="de">Stammdaten</label>
		<label lang="en">General</label>
		<label lang="fr">Propriétés</label>
		<label lang="ja">プロパティ</label>
		<property qualifier="AbstractPromotion.code"/>
		<property qualifier="AbstractPromotion.title"/>
		<property qualifier="AbstractPromotion.name"/>		
		<property qualifier="AbstractPromotion.enabled"/>
		<property qualifier="AbstractPromotion.priority"/>
		<property qualifier="AbstractPromotion.promotionGroup" visible="true"/>
	</group>
	
	<group qualifier="Threshold" visible="true" initially-opened="true">
		<label lang="de">Schwelle</label>
		<label lang="en">Threshold</label>
		<label lang="fr">Seuil</label>
		<label lang="ja">しきい値</label>
		
		<property qualifier="OrderThresholdFreeGiftPromotion.thresholdTotals">
			<parameter name="allowCreate" value="true" />
		</property>
		<property qualifier="OrderThresholdFreeGiftPromotion.giftProduct">
			<parameter name="allowCreate" value="true" />
		</property>
	</group>


	<group qualifier="Dates" visible="true" initially-opened="true">
		<label lang="de">Termine</label>
		<label lang="en">Dates</label>
		<label lang="fr">Dates</label>
		<label lang="ja">日付</label>
		
		<property qualifier="AbstractPromotion.startDate"/>
		<property qualifier="AbstractPromotion.endDate"/>
	</group>	
	
	<group qualifier="Restriction" visible="true" initially-opened="true">
		<label lang="de">Einschränkungen</label>
		<label lang="en">Restrictions</label>
		<label lang="fr">Restrictions</label>
		<label lang="ja">制限</label>
		
		<property qualifier="AbstractPromotion.restrictions">
			<parameter name="allowCreate" value="true" />
		</property>
	</group>
	
	<group qualifier="Messages" visible="true" initially-opened="true">
		<label lang="de">Nachrichten</label>
		<label lang="en">Messages</label>
		<label lang="ja">メッセージ</label>
		<property qualifier="AbstractPromotion.description" >
			<parameter name="rows" value="3" />
		</property>
		<property qualifier="OrderThresholdFreeGiftPromotion.messageFired" >
			<parameter name="rows" value="3" />
		</property>
		<property qualifier="OrderThresholdFreeGiftPromotion.messageCouldHaveFired" >
			<parameter name="rows" value="3" />
		</property>
		
	</group>

	</displayed-properties>
</wizard-config>