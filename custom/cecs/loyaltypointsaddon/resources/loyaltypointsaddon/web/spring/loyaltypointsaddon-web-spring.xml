<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/>
    <context:component-scan base-package="com.hybris.showcase.loyaltypoints.controllers" />

	<!-- Expose /acceleratoraddon/web/webroot/WEB-INF/messages/base.js.properties  resource bundle as javascript variables -->
	<bean id="defaultLoyaltypointsaddonJavaScriptMessageResourceAccessor" parent="abstractJavaScriptMessageResourceAccessor">
		<property name="addOnName" value="loyaltypointsaddon"/>
	</bean>

	<bean id="defaultLoyaltypointsaddonBeforeViewJsPropsHandlerAdaptee" parent="abstractBeforeViewJsPropsHandlerAdaptee" class="de.hybris.platform.addonsupport.interceptors.ExportJsPropertiesBeforeViewHandler">
		<property name="messageSource" ref="defaultLoyaltypointsaddonJavaScriptMessageResourceAccessor"/>
	</bean>

	<bean id="getLoyaltypointsaddonBeforeViewHandler" parent="beforeViewHandlerAdapter">
		<property name="adaptee">
			<ref bean="defaultLoyaltypointsaddonBeforeViewJsPropsHandlerAdaptee"/>
		</property>
	</bean>
	<bean id="LoyaltypointsaddonBeforeViewHandlerListMergeDirective" depends-on="beforeViewHandlersList" parent="listMergeDirective">
		<property name="add" ref="getLoyaltypointsaddonBeforeViewHandler"/>
	</bean>


    <bean id="remainingLoyaltyPointsComponentRenderer"
          class="com.hybris.showcase.loyaltypoints.renderers.cms.RemainingLoyaltyPointsComponentRenderer"
          parent="genericAddOnCMSComponentRenderer">
        <property name="loyaltyPointsService" ref="loyaltyPointsService" />
    </bean>
    <bean id="remainingLoyaltyPointsComponentRendererMapping" parent="addonCmsComponentRendererMapping">
        <property name="typeCode" value="RemainingLoyaltyPointsComponent"/>
        <property name="renderer" ref="remainingLoyaltyPointsComponentRenderer"/>
    </bean>

</beans>
