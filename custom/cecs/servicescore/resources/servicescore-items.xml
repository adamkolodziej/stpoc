<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<!--CECS-97 Merchandise landing page - START -->
	<collectiontypes>
		<collectiontype elementtype="SingleBannerComponent" code="SingleBannerComponentList" type="list"/>
	</collectiontypes>
	<!--CECS-97 Merchandise landing page - END -->

	<itemtypes>
		<itemtype code="SingleBannerComponent" autocreate="true"
				  generate="true" extends="BannerComponent"
				  jaloclass="com.hybris.showcase.servicescore.jalo.components.SingleBannerComponent">
			<description>
				It is just a simple extension of BannerComponent to have a different jsp, which will be responsive.
			</description>
			<attributes>
			</attributes>
		</itemtype>
		
		<itemtype code="BannerWithButtonComponent" autocreate="true"
				  generate="true" extends="SingleBannerComponent"
				  jaloclass="com.hybris.showcase.servicescore.jalo.components.BannerWithButtonComponent">
			<description>
				It is just a simple extension of SingleBannerComponent to have dynamic button text.
			</description>
			<attributes>
				<attribute qualifier="btnText" generate="true" autocreate="true" type="localized:java.lang.String">
					<persistence type="property" />
					<modifiers optional="true" />
				</attribute>
			</attributes>
		</itemtype>
		<!--CECS-97 Merchandise landing page - START -->
		<itemtype code="BannerCollectionComponent" autocreate="true"
				  generate="true" extends="SimpleCMSComponent"
				  jaloclass="com.hybris.showcase.servicescore.jalo.components.BannerCollectionComponent">
			<description>
				Displays a list of SingleBannerComponent.
			</description>
			<attributes>
				<attribute qualifier="banners" type="SingleBannerComponentList">
					<persistence type="property"/>
					<modifiers optional="false"/>
				</attribute>
			</attributes>
		</itemtype>
		<!--CECS-97 Merchandise landing page - END -->

		<!--CECS-160 ResponsiveParagraphComponent on the homepage - START-->
		<itemtype code="ResponsiveParagraphComponent" autocreate="true"
				  generate="true" extends="ExtendedCMSComponent"
				  jaloclass="com.hybris.showcase.servicescore.jalo.components.ResponsiveParagraphComponent">
			<description>
				Simple responsive Paragraph Component which renders a headline and/or content with custom css class.
			</description>
			<attributes>
				<attribute qualifier="content" generate="true" autocreate="true" type="localized:java.lang.String">
					<persistence type="property" />
					<modifiers optional="true" />
				</attribute>
			</attributes>
		</itemtype>
		<!--CECS-160 ResponsiveParagraphComponent on the homepage - END-->
	</itemtypes>
</items>
